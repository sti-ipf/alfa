= semantic_form_for(@room, :html => {:id => 'formframe'}) do |f|
  - if @room.errors.any?
    #error_explanation
      %ul
        - @room.errors.full_messages.each do |msg|
          %li= msg
  %div
    = f.label :core_id, t('coordinator.core')
    = f.select :core_id, @cores
  %div
    = f.label :name, t('room.name')
    = f.text_field :name
  %div
    = f.input :coordinators, :as => :check_boxes, :collection => @coordinators
  %div
    = f.input :educators, :as => :check_boxes, :collection => @educators
  %div
    .gray_border
      %h2= t('core.period_field')
    %br
    - f.fields_for :periods do |builder|
      = render "period_fields", :f => builder
    %div
      .form_actions
        .add
          = link_to_add_fields t('period.new'), f, :periods
  .actions
    = f.submit button
