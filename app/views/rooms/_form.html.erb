<%= form_for(@room) do |f| %>
  <% if @room.errors.any? %>
    <div id="error_explanation">
      <ul>
      <% @room.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :name, t('room.name') %><br />
    <%= f.text_field :name %>
  </div>
  <div class="actions">
    <%= f.submit button %>
  </div>
<% end %>
