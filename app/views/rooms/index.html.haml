:javascript
  $(document).ready(function(){
    $('.more-click').click(function(){
      $(this).next().children().children().slideToggle();
    })
    var options = {additionalFilterTriggers: [$('#filter')], filter: 'false'};
    $('.list').tableFilter(options);
  });

%h1.title= t('room.listing')
.actions 
= render '/layouts/shared/add_button', :new_label=>t('room.new'), :new_path => new_room_path, :permission => :rooms
= render '/layouts/shared/filter_bar'

%table{:class => 'list'}
  %thead
    %tr
      %th= t('room.name')
      %th= "NÃºcleo"
      %th{:style => 'width: 20px;'}
      %th{:style => 'width: 20px;'}
  %tbody
    - @rooms.each do |room|
      %tr{:class => 'more-click'}
        %td{:class => 'first-td'}= room.name
        %td= room.core.try(:name)
        = render '/layouts/shared/edit_delete', :edit_path => edit_room_path(room), :delete_obj => room, :permission => :rooms
      %tr{:class => 'more-info'}
        %td{:colspan => 4}
          %div
            = render 'show', :room => room
