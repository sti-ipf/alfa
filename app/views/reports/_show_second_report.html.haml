:javascript
  var chart;
  $(document).ready(function() {
    chart = new Highcharts.Chart({
      chart: {
        renderTo: 'second_container',
        plotBackgroundColor: null,
        plotBorderWidth: null,
        plotShadow: false
      },
      title: {
        text: '#{@graphic_title}'
      },
      tooltip: {
        formatter: function() {
                           return '<b>'+ this.point.name +'</b>: '+ this.y;
                        }
      },
      plotOptions: {
        pie: {
          allowPointSelect: true,
          cursor: 'pointer',
          dataLabels: {
            enabled: true,
            color: '#000000',
            connectorColor: '#000000',
            formatter: function() {
                                 return this.point.name +': '+ Math.round(this.percentage * 10)/10 +' %';
                              }
          }
        }
      },
      series: [{
        type: 'pie',
        name: '',
        data: [#{@data}
        ]
      }]
    });
  });

#second_container