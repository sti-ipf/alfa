%html
  %head
    %title Alfa
    = stylesheet_link_tag :all
    - js_files = ['jquery.min.js', 'jquery_ujs.js', 'jquery-rails.js', 'jquery.dataTables.min.js', 'jquery.noty.js']
    - js_files.each do |js_file|
      = javascript_include_tag js_file
    = csrf_meta_tag


  %body

    #header_wrapper
      #header
      
    #content_wrapper
      #content
        #main_column_wrapper
          #main_column
            %p
              :javascript
                #{show_messages}
            #main_container
              = yield
          .clearfix
    #footer_wrapper{:style => "position:absolute; bottom: 0;"}
      #footer
