:javascript
  $(document).ready(function(){
    $('.more-click').click(function(){
      $(this).next().children().children().slideToggle();
    })
    var options = {additionalFilterTriggers: [$('#filter')], filter: 'false'};
    $('.list').tableFilter(options);
  });


%h1.title= t('core.listing')
.actions 
  = render '/layouts/shared/add_button', :new_label=>t('core.new'), :new_path => new_core_path, :permission => :cores
= render '/layouts/shared/filter_bar'
%table{:class => 'list'}
  %thead
    %tr
      %th= t('core.city')
      %th= t('core.community')
      %th{:style => 'width: 20px;'}
      %th{:style => 'width: 20px;'}
  %tbody
    - @cores.each do |core|
      %tr{:class => 'more-click'}
        %td{:class => 'first-td'}= core.city.try(:name)
        %td= core.name
        = render '/layouts/shared/edit_delete', :edit_path => edit_core_path(core), :delete_obj => core, :permission => :cores
      %tr{:class => 'more-info'}
        %td{:colspan => 4}
          %div
            = render 'show', :core => core
%br
