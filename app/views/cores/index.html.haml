:javascript
  $(document).ready(function(){
    datatable_list('.list', [2, 3, 4])
  });


%h1= t('core.listing')
%table{:class => 'list'}
  %thead
    %tr
      %th= t('core.city')
      %th= t('core.community')
      %th
      %th
      %th
  %tbody
    - @cores.each do |core|
      %tr
        %td= core.city.try(:name)
        %td= core.community
        %td= link_to t('show'), core
        %td= link_to t('edit'), edit_core_path(core)
        %td= link_to t('delete'), core, :confirm => t('are_you_sure'), :method => :delete
%br
