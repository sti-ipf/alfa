= link_to t('edit'), edit_coordinator_path(@coordinator)
|
\#{link_to t('back'), coordinators_path}

%p
  %b= t('coordinator.core')
  = @coordinator.core.try(:name)
  %br
  %b= t('coordinator.name')
  = @coordinator.name
  %br
  %b= t('coordinator.start_date_to_students')
  = @coordinator.start_date_to_students.try(:strftime, '%d/%m/%Y')
  %br
  %b= t('coordinator.age')
  = @coordinator.age
  %br
  %b= t('coordinator.gender')
  = @coordinator.gender
  %br
  %b= t('coordinator.dob')
  = @coordinator.dob
  %br
  %b= t('coordinator.ethnicity')
  = @coordinator.ethnicity
  %br
  %b= t('coordinator.hometown')
  = @coordinator.hometown
  %br
  %b= t('coordinator.state')
  = @coordinator.state
  %br
  %b= t('coordinator.zone')
  = @coordinator.zone
  %br
  %b= t('coordinator.address')
  = @coordinator.address
  %br
  %b= t('coordinator.civil_status')
  = @coordinator.civil_status
  %br
  %b= t('coordinator.rg')
  = @coordinator.rg
  %br
  %b= t('coordinator.cpf')
  = @coordinator.cpf
  %br
  %b= t('coordinator.voter_id')
  = @coordinator.voter_id
  %br
  %b= t('coordinator.professional_id')
  = @coordinator.professional_id
  %br
  %b= t('coordinator.professional_serie')
  = @coordinator.professional_serie
  %br
  %b= t('coordinator.birth_or_marriage_certificate_id')
  = @coordinator.birth_or_marriage_certificate_id
  %br
  %b= t('coordinator.social_id')
  = @coordinator.social_id
  %br
  %b= t('coordinator.sons_number.title')
  = @coordinator.sons_number
  %br
  - sons_age = [["primeiro", @coordinator.first_son_age], ["segundo", @coordinator.second_son_age], ["terceiro", @coordinator.third_son_age], ["quarto", @coordinator.forth_son_age]]
  - sons_age.each do |s|
    - if !s.last.blank?
      %b= "Idade do #{s.first} filho"
      = s.last
      %br
  
  %b= t('coordinator.education_level')
  = @coordinator.education_level
  - if !@coordinator.education_level_desc.blank?
    = "(#{@coordinator.education_level_desc})"
  %br
  %b= t('coordinator.familiar_income.title')
  = @coordinator.familiar_income
  %br
  %b= t('coordinator.house.title')
  = @coordinator.house
  - if !@coordinator.house_desc.blank?
    = "(#{@coordinator.house_desc})"
  %br
  %b= t('coordinator.house_type')
  = @coordinator.house_type
  %br
  %b= t('coordinator.special_need')
  = @coordinator.special_need
  %br
  %b= t('coordinator.political_affiliation.title')
  = @coordinator.political_affiliation
  %br
  %b= t('coordinator.political_party')
  = @coordinator.political_party
  - if !@coordinator.political_desc.blank?
    = @coordinator.political_desc
  
  %br
  %b= t('coordinator.religion.title')
  = @coordinator.religion
  - if !@coordinator.religion_desc.blank?
    = "(#{@coordinator.religion_desc})"
  %br
  %b= t('coordinator.association.title')
  = @coordinator.association
  - if !@coordinator.association_desc.blank?
    = @coordinator.association_desc
  %br
  %b= t('coordinator.cooperative.title')
  = @coordinator.cooperative