        $(document).ready(function() {
            $("#coordinator_education_level").change(function() {
                var value = $(this).val();
                if (value == 0 || value == 5 || value == 6 || value == 7){
                  jQuery('#coordinator_education_level_desc_div').attr('style','display:none; !important');
                  
