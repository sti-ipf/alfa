    = f.label :core_id, t('coordinator.core')
    %br
    = f.select :core_id, @cores, :prompt => "Selecione"
    :javascript
      $(document).ready(function() {
          $("#coordinator_core_id").change(function() {
              var value = $(this).val();
              var address = "/coordinator_update_rooms/#{ (@coordinator.id.nil?)? 0 : @coordinator.id}/" + value
              $.ajax({url: address});
          });
      });



  %div
    %label= "Turmas"
    %br
    #rooms_field_div
      - @rooms.each do |r|
        = check_box_tag 'coordinator[room_ids][]', r.id, @coordinator.rooms.include?(r)
        = r.name
